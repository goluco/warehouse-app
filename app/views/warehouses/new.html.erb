<% if @warehouse.errors.any? %>
  <p>Verifique os erros abaixo</p>
  <ul>
    <% @warehouse.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @warehouse) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
    <div>
      <%= form.label :code %>
      <%= form.text_field :code %>
    </div>
    <div>
      <%= form.label :city %>
      <%= form.text_field :city %>
    </div>
    <div>
      <%= form.label :address %>
      <%= form.text_field :address %>
    </div>
    <div>
      <%= form.label :cep %>
      <%= form.text_field :cep %>
    </div>
    <div>
      <%= form.label :area %>
      <%= form.number_field :area %>
    </div>
    <div>
      <%= form.submit 'Enviar' %>
    </div>
<% end %>