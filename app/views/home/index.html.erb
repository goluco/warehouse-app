<section id='warehouses'>
<h2>Galpões</h2>

<%= link_to('Cadastrar novo galpão', new_warehouse_path) %>

<% if @warehouses.empty? %>
  <p><%= 'Não existem galpões cadastrados' %><p>
<% else %>
  <% @warehouses.each do |w| %>
    <div>
      <h3>Nome: <%= link_to(w.name, warehouse_path(w.id)) %></h3>
      <dl>
        <dt>Código:</dt> 
        <dd><%= w.code %></dd>
        <dt>Cidade:</dt> 
        <dd><%= w.city %></dd>
        <dt>Área:</dt> 
        <dd><%= w.area %> m²</dd>
      </dl>
    </div>
  <% end %>
<% end %>
</section>